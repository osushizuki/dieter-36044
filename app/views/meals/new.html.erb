<%= render "shared/header" %>

<%= form_with model:@meal, local: true do |f|%>

  <div class="input-content">
    <div>
      <span>運動時間</span>
      <span>必須</span>
    </div>
    <%= f.text_field :calorie, placeholder:"例）30" %>
    <span class="sell-yen">kal</span>
  </div>

  <div class="input-content">
    <div>
      <span>食事内容</span>
      <span>必須</span>
    </div>
    <%= f.text_field :explanation, id:"item-price"%>
  </div>

  <div class="submit-content">
    <%= f.submit "記録する" ,class:"sell-btn" %>
  </div>

<% end %>
