<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    </div>

    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= devise_error_messages!%>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>

        <div cclass='field'>
          <div class='field-label'>
            <label class="form-text">ニックネーム</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_area :nick_name, placeholder:"例) furima太郎", maxlength:"20" %>
          </div>
        </div>

        <div class="weight-bold-text">
          性別
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :weight%>
          </div>
          <div class='field-input'>
            <%= f.text_field :weight, autocomplete: "off"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :height%>
          </div>
          <div class='field-input'>
            <%= f.text_field :height, autocomplete: "off"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :age%>
          </div>
          <div class='field-input'>
            <%= f.text_field :age, autocomplete: "off"%>
          </div>
        </div>

        <div class="weight-bold-text">
          運動習慣
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:habit_id, Habit.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>

        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
