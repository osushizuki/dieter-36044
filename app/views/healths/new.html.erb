<%= render "shared/header" %>

<h1>Healths#new</h1>

<%= form_with model:@health, local: true do |f|%>

  <div class="price-content">
    <div class="price-text">
      <span>体重</span>
    </div>
    <%= f.number_field :every_weight, step: '0.1',class:"price-input", id:"item-price", placeholder:"例）30" %>
    <span class="sell-yen">kg</span>
  </div>

  <div class="sell-btn-contents">
    <%= f.submit "記録する" ,class:"sell-btn" %>
  </div>

<% end %>
